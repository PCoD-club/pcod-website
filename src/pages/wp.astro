        hr {
          @apply my-2;
        }
        
        ul {
          @apply list-disc;
          li {
            @apply ml-6;
          }
        }
        
        a:not(h1 a, h2 a, h3 a) {
          @apply underline;
          color: #b300ff;
        }
        </style>

